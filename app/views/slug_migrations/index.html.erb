<ul class="slug-filters">
  <%= active_link_to 'Filter by completed', slug_migrations_path(completed: true), wrap_tag: :li %>
  <%= active_link_to 'Filter by incompleted', slug_migrations_path(completed: false), wrap_tag: :li %>
</ul>

<div class="migrations">
  <table class="table table-bordered">
    <thead>
      <th></th>
      <th>Slug</th>
      <th>Completed</th>
    </thead>

    <tbody>
      <% @migrations.each do |migration| %>
        <tr>
          <td></td>
          <td><%= migration.slug %></td>
          <td><%= migration.completed %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
