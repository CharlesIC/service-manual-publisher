<%= render 'header_with_navigation', edition: @edition, guide: @guide %>

<div class="row">
  <pre class="col-md-8">
    <%= @edition.body %>
  </pre>
</div>

<div class="row">
  <% if @guide.latest_edition.present? && @guide.latest_edition.approved? %>
    <%= form_for :publication, url: guide_publications_path(guide_id: @guide.id) do |f| %>
      <%= f.submit "Publish Guide", class: 'btn btn-success', name: :publish %>
    <% end %>
  <% end %>

  <% if @guide.can_request_review? %>
    <%= form_for :review_request, url: edition_review_requests_path(edition_id: @guide.latest_edition.id) do |f| %>
      <%= f.submit "Send for review", class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <% if @guide.can_mark_as_approved? %>
    <%= form_for Approval.new do |f| %>
      <fieldset class='meta'>
        <legend>Approve</legend>
        <%= f.hidden_field :edition_id, value: @guide.latest_edition.id %>
        <%= f.submit "Mark as Approved", class: 'btn btn-primary' %>
      </fieldset>
    <% end %>
  <% end %>
</div>

<p class="row">
  <%= render 'editions/comments', edition: @edition, comments: @comments %>
</p>
